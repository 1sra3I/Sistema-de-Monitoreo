<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mx.unison</groupId>
  <artifactId>SistemaMonitoreo</artifactId>
  <version>0.0.1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>cliente-fat-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>SistemaMonitoreo-Cliente</finalName>
              <transformers>
                <transformer>
                  <mainClass>mx.unison.sistemamonitoreo.Cliente.MainFrame</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>servidor</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
              <execution>
                <id>servidor-fat-jar</id>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <finalName>SistemaMonitoreo-Servidor</finalName>
                  <transformers>
                    <transformer>
                      <mainClass>mx.unison.sistemamonitoreo.Servidor.ServidorMonitoreo</mainClass>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>toedter</id>
      <url>https://toedter.com/maven/</url>
    </repository>
  </repositories>
  <properties>
    <maven.compiler.target>22</maven.compiler.target>
    <exec.mainClass>mx.unison.sistemamonitoreo.SistemaMonitoreo</exec.mainClass>
    <maven.compiler.source>22</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
